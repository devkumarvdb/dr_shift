.navbar.navbar-expand-lg.navbar-light.bg-light
  .container
    %a.navbar-brand{ href: "#" } DrShift

    %button.navbar-toggler{ type: "button", data: { bs_toggle: "collapse", bs_target: "#navbarNav" } }
      %span.navbar-toggler-icon

    #navbarNav.collapse.navbar-collapse
      %ul.navbar-nav.ml-auto
        %li.nav-item
          %a.nav-link{ href: root_path } Home
        %li.nav-item
          %a.nav-link{ href: user_path(current_user) } Profile
        - if current_user.has_role?(:admin)
          %li.nav-item
            %a.nav-link{ href: new_referral_path } Send New Referral
        %li.nav-item
          = link_to "Logout", destroy_user_session_path, method: :delete, class: "nav-link"